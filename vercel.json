{
    "builds": [{
        "src": "myproject/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.13.1" }
    }],
    "routes": [
        {
            "src": "/static/(.*)",  // Statik dosyalar için yönlendirme
            "dest": "/static/$1"    // Statik dosyaların doğru yola yönlendirilmesi
        },
        {
            "src": "/media/(.*)",    // Medya dosyaları için yönlendirme (varsa)
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",          // Diğer tüm URL'ler Django'ya yönlendirilir
            "dest": "myproject/wsgi.py"
        }
    ]
}
